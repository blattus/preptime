<h1>Forgot your password?</h1>
<h2>That's okay. We all forget things sometimes.</h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>

  <%= devise_error_messages! %>

  <div>
  <%= f.email_field :email, :placeholder => "Email", :autofocus => true %></div>
<br/>
  <div><%= f.submit "Reset password", :class => "btn btn-large btn-default"%></div>
<% end %>

<%= render "devise/shared/links" %>
