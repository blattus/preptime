<!-- SIGN UP PAGE --> 

<h1>Sign up for Prepti.me</h1>

<h2>First, the basics.</h2>
<% resource.profile || resource.build_profile %>
<%= form_for(resource, :as => resource_name, 
		:url => registration_path(resource_name)) do |f| %>

  <%= devise_error_messages! %>

  <div class-="control-group">
    <div class="controls">
  	<%= f.email_field :email, :autofocus => true, :placeholder => "email@prepti.me" %>
  </div>
<br/>
  <div class="controls">
  	<%= f.password_field :password, :placeholder => "Password" %>
  </div>
<br/>
  <div class="controls">
  	<%= f.password_field :password_confirmation, :placeholder => "Confirm Password" %>
  </div>
<br/>
<h2>Now, begin building your Prepti.me profile. You can skip this step and do it later, too.</h2>
  <%= f.fields_for :profile do |profile_form| %>
  	<div class="controls">
  		<%= profile_form.text_field :first_name, :placeholder => "First Name" %>
  	</div>
    <br/>
  	<div class="controls">
  		<%= profile_form.text_field :last_name, :placeholder => "Last Name" %>
  	</div>
    <br/>
    <div class="controls">
      <%= profile_form.text_field :school, :placeholder => "School" %>
    </div>
  <% end %>
<br/>
  <div class="controls">
  	<%= f.submit "Sign up", :class => "btn btn-large btn-primary" %>
  </div>
</div>
<% end %>

<%= render "devise/shared/links" %>
