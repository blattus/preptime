<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= stylesheet_link_tag    "application", media: "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= render 'layouts/shim' %>
  </head>
  <body>
    <%= render 'layouts/header' %>
    <div class="container">

      <% if flash[:error] %>
        <div class="alert alert-error">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <%= content_tag(:div, flash.now[:error], :id => "flash_error") %>
        </div>
      <% end %>

      <% if flash[:notice] %>
        <div class="alert alert-info">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <%= content_tag(:div, flash.now[:notice], :id => "flash_error") %>
        </div>
      <% end %>

      <% if flash[:alert] %>
        <div class="alert">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <%= content_tag(:div, flash.now[:alert], :id => "flash_error") if flash[:alert] %>
        </div>
      <% end %>

      <%= yield %>

      <%= render 'layouts/footer' %>
    </div>
  </body>
</html>