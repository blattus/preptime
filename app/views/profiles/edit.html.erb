<% provide(:title, "Update Profile") %>
<h1>Update your Profile</h1>

<div>
	<div>
		<%= form_for @profile do |f| %>

			<%= f.label :first_name %>
			<%= f.text_field :first_name %>

			<%= f.label :last_name %>
			<%= f.text_field :last_name %>

			<%= f.label :state %>
			<%= f.text_field :state %>

			<%= f.label :school %>
			<%= f.text_field :school %>

			<p><%= f.submit "Submit Changes", class: "btn btn-primary" %></p>

		<% end %>

	</div>
</div>